<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:paddingStart="@dimen/default_padding_m"
    android:paddingEnd="@dimen/default_padding_m"
    android:background="@color/very_dark_gray_1"
    android:gravity="center_vertical"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_exit_verse_marker_mode"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/default_padding_m"
        android:scaleType="fitCenter"
        android:src="@drawable/close_white"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/verse_marker_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:textColor="@color/primary_text_default_material_dark"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/verse_marker_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_s"
        android:text="left"
        android:textSize="18sp"
        android:textColor="@color/primary_text_default_material_dark"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/file_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:textColor="@color/text_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/file_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_l"
        android:text="UDB"
        android:textColor="@color/text_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/file_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_l"
        android:text="Matthew"
        android:textColor="@color/text_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/file_chapter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_l"
        android:text="Chapter"
        android:textColor="@color/text_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/file_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_l"
        android:text="1"
        android:textColor="@color/text_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/file_unit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_l"
        android:text="Chunk"
        android:textColor="@color/text_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/file_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_s"
        android:text="1"
        android:textColor="@color/text_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/secondaryActions"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right">

        <ImageButton
            android:id="@+id/btn_enter_verse_marker_mode"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:background="#00000000"
            android:src="@drawable/bookmark_o"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <org.wycliffeassociates.translationrecorder.widgets.FourStepImageView
            xmlns:app="http://schemas.android.com/apk/res/org.wycliffeassociates.translationrecorder"
            android:id="@+id/btn_rate"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/selector_take_rating"
            android:scaleType="fitCenter"
            android:clickable="true"
            app:light_mode="true"
            />

        <ImageButton
            android:id="@+id/btn_rerecord"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:background="#00000000"
            android:src="@drawable/redo"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/btn_insert_record"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:background="#00000000"
            android:src="@drawable/insert_recording_white"
            android:scaleType="fitCenter"
            />

    </LinearLayout>


</LinearLayout>