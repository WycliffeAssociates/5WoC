<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ImageButton
            android:id="@+id/check_level_zero"
            android:layout_width="@dimen/rating_icon_size"
            android:layout_height="@dimen/rating_icon_size"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_check_level_zero"
            android:padding="@dimen/default_padding_m"
            android:background="@color/transparent"
            />

        <org.wycliffeassociates.translationrecorder.widgets.FourStepImageView
            android:id="@+id/check_level_one"
            android:layout_width="@dimen/rating_icon_size"
            android:layout_height="@dimen/rating_icon_size"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_check_level_one"
            android:padding="@dimen/default_padding_m"
            />

        <org.wycliffeassociates.translationrecorder.widgets.FourStepImageView
            android:id="@+id/check_level_two"
            android:layout_width="@dimen/rating_icon_size"
            android:layout_height="@dimen/rating_icon_size"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_check_level_two"
            android:padding="@dimen/default_padding_m"
            />

        <org.wycliffeassociates.translationrecorder.widgets.FourStepImageView
            android:id="@+id/check_level_three"
            android:layout_width="@dimen/rating_icon_size"
            android:layout_height="@dimen/rating_icon_size"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_check_level_three"
            android:padding="@dimen/default_padding_m"
            />

    </LinearLayout>

</FrameLayout>