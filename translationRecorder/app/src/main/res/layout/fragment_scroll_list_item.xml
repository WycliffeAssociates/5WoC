<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:padding="@dimen/default_padding_m"
    android:gravity="center_vertical"
    android:id='@+id/scroll_list_item_layout'>

    <ImageView
        android:layout_width="@dimen/icon_m"
        android:layout_height="@dimen/icon_m"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_library_books_black_24dp"
        android:id="@+id/itemIcon" />

    <TextView android:id="@+id/majorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/title"
        android:text="Major Text"
        android:textColor="@color/dark_primary_text"
        android:paddingLeft="@dimen/default_padding_m" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center|right"
        android:layout_height="match_parent"
        android:id="@+id/rightmost_scroll_list_item_layout">

        <TextView android:id="@+id/minorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minor Text"
            android:textColor="@color/dark_secondary_text"
            android:layout_weight="1"
            android:textSize="@dimen/body"
            android:gravity="right"/>

        <ImageView
            android:layout_width="@dimen/icon_m"
            android:layout_height="@dimen/icon_m"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:id="@+id/moreIcon" />
    </LinearLayout>

</LinearLayout>