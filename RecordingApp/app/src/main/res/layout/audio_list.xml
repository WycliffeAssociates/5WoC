<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_bg" >

        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_height="72dp"
            android:layout_width="fill_parent"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:background="@color/primary"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <ImageButton
                android:id="@+id/btnSortName"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:background="#00000000"
                android:src="@drawable/ic_sort_alpha" />

            <ImageButton
                android:id="@+id/btnSortDuration"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="#00000000"
                android:src="@drawable/ic_sort_length" />

            <ImageButton
                android:id="@+id/btnSortDate"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="#00000000"
                android:src="@drawable/ic_sort_date" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:background="#00000000"
                android:gravity="center" >

                <CheckBox
                    android:id="@+id/btnCheckAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:button="@drawable/ic_select_all_empty" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/top_bar"
            android:background="@color/primary_bg"
            android:divider="#00000000"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            android:animateLayoutChanges="true"
            android:layout_above="@+id/file_actions">
        </ListView>

        <fragment
            android:name="wycliffeassociates.recordingapp.FilesPage.FragmentActions"
            android:id="@+id/file_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

