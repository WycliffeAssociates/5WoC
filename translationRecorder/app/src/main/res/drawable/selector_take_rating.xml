<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.wycliffeassociates.translationrecorder"
    >

    <item
        app:light_mode="false"
        app:step_zero="true"
        android:drawable="@drawable/star_o"
        />

    <item
        app:step_one="true"
        android:drawable="@drawable/star_red"
        />

    <item
        app:step_two="true"
        android:drawable="@drawable/star_yellow"
        />

    <item
        app:step_three="true"
        android:drawable="@drawable/star_green"
        />

    <item
        app:light_mode="true"
        app:step_zero="true"
        android:drawable="@drawable/star_white_o"
        />

    <item
        app:light_mode="true"
        android:drawable="@drawable/star_white_o" />

</selector>
